<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments_int.IntRugbyFragment">

<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/int_rugby_view_swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/int_rugby_view_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</android.support.v4.widget.SwipeRefreshLayout>

<LinearLayout
    android:id="@+id/int_rugby_view_internetNotAvailable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/internet_error_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Internet connection not available."
        android:textColor="@color/title_backColor"
        android:textSize="18sp" />

    <Button
        android:id="@+id/int_rugby_view_btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/title_backColor"
        android:text="Retry"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="15sp" />
</LinearLayout>


<ProgressBar
    android:id="@+id/int_rugby_view_progressBar1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:max="100"
    android:progress="50"
    android:background="#ffffff"
    android:padding="20dp" style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:visibility="gone"
    android:indeterminateTintMode="src_atop"
    android:indeterminateTint="#80000000"
    android:indeterminate="true"/>

</FrameLayout>